<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Booking Details"
        android:textColor="@color/booking_details"
        android:textSize="@dimen/booking_details" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt1"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Full Name :  " />

        <TextView
            android:id="@+id/b_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="B.H.D. Kumar"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt2"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Contact No :  " />

        <TextView
            android:id="@+id/b_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=" 0773457628"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt3"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Booking Date :  " />

        <TextView
            android:id="@+id/b_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2023-05-22"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt4"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Room Type :  " />

        <TextView
            android:id="@+id/b_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Double Bed Room"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt5"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Number of Rooms :  " />

        <TextView
            android:id="@+id/no_rooms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt6"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Number of Guests :  " />

        <TextView
            android:id="@+id/no_guests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt7"
            android:layout_width="318dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:text="Number of Days :  " />

        <TextView
            android:id="@+id/no_days"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#0A0A0B"
            android:textSize="@dimen/preview_data" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textColor="@color/amounttopay"
            android:textSize="@dimen/amount_to_pay" />

        <TextView
            android:id="@+id/p_amount"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="$350"
            android:textColor="@color/amount"
            android:textSize="@dimen/amount" />
    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#00BCD4"
        android:onClick="insert_Booking"
        android:text="@string/confirm_book"
        android:textSize="@dimen/confirm_book" />

</LinearLayout>